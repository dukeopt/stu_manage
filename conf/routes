# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                      controllers.LoginController.index
GET     /login                 controllers.LoginController.index
POST    /login                 controllers.LoginController.login
GET     /logout                controllers.LogoutController.logout

GET     /student               controllers.StudentController.index
GET     /teacher               controllers.TeacherController.index
GET     /admin                 controllers.AdminController.index

GET     /course/list           controllers.CourseController.list
GET     /course/add            controllers.CourseController.add
POST    /course/save           controllers.CourseController.save
GET     /course/del/:id        controllers.CourseController.delete(id: Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file          controllers.Assets.versioned(path="/public", file: Asset)
